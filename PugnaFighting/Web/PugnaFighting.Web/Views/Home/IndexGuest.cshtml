@{
    ViewData["Title"] = "Welcome";
}

    <div class="p-5 rounded text-white bg-dark mx-auto w-75">
        <h3 class="text-center p-2">Welcome To Pugna Fighting Game</h3>

        <p class="text-center">Pugna Fighting is free to play online MMA game. Only here you can make your fighter and create whole team with coach, cutman and manager.</p>

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block mx-auto" style="width: 500px; height: 500px" src="https://res.cloudinary.com/dka5uzl0n/image/upload/v1586117186/Create_l1itgo.png" alt="Create fighter">
                    <h5 class="text-center">Create your own MMA fighter</h5>
                </div>
                <div class="carousel-item">
                    <img class="d-block mx-auto" style="width: 500px; height: 500px" src="https://res.cloudinary.com/dka5uzl0n/image/upload/v1586117186/Train_jqpm4a.png" alt="Train">
                    <h5 class="text-center">Train your fighter</h5>
                </div>
                <div class="carousel-item">
                    <img class="d-block mx-auto" style="width: 500px; height: 500px" src="https://res.cloudinary.com/dka5uzl0n/image/upload/v1586117348/Organization1241221_qzxwen.png" alt="Chose Organization">
                    <h5 class="text-center">Sign a contract with one of two best MMA Organization</h5>
                </div>
                <div class="carousel-item">
                    <img class="d-block mx-auto" style="width: 500px; height: 500px" src="https://res.cloudinary.com/dka5uzl0n/image/upload/v1587425143/Hire_dstlbd.png" alt="Hire Team">
                    <h5 class="text-center">Hire Manager, Coach, Cutman</h5>
                </div>
                <div class="carousel-item">
                    <img class="d-block mx-auto" style="width: 500px; height: 500px" src="https://res.cloudinary.com/dka5uzl0n/image/upload/v1586117188/Fight_ydhxrg.png" alt="Fight">
                    <h5 class="text-center">Defeat every opponent you face</h5>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <p class="text-center m-4">Just click <a href="https://localhost:44319/Identity/Account/Register">here</a>, register and play.</p>

    </div>