@{
    ViewData["Title"] = "Create Fighter";
}

<div class="p-5 rounded text-white bg-dark mx-auto w-75">
    <h2 class="text-center pb-2">Welcome, User</h2>
    <p class="text-center font-weight-bold">Its time to create you first figter</p>

    <form class="col-6 mx-auto">
        <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="First Name">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nickname">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Last Name">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Location">
            <small id="emailHelp" class="form-text text-muted">Fighter Born Country</small>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile01"
                           aria-describedby="inputGroupFileAddon01">
                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Chose Category</label>
            <select class="form-control" id="exampleFormControlSelect1">
                <option>Lightweight</option>
                <option>MiddleWeight</option>
                <option>Heavyweight</option>
            </select>
        </div>
    </form>

    <div class="">
        <h1 class="text-center">Skills</h1>
        <p style="text-align: center;" class="font-weight-bold">Remaining points: <span class="border px-2 rounded" id="remaining-points">20</span></p>

        <br>

        <div class="w-50 mx-auto">
            <p class="text-center font-weight-bold"> Grapling </p>
            <div class="d-flex justify-content-between">
                <span class="mx-5 btn text-white border rounded" id="decr">-</span>
                <div class="progress m-2 w-100">
                    <div id="grapling-bar" class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50</div>
                </div>
                <span id="incr" class="border rounded mx-5 btn text-white">+</span>
            </div>
            <p class="text-center font-weight-bold"> Striking </p>
            <div class="d-flex justify-content-between">
                <span class="mx-5 btn text-white border rounded" id="decr">-</span>
                <div class="progress m-2 w-100">
                    <div id="grapling-bar" class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50</div>
                </div>
                <span id="incr" class="border rounded mx-5 btn text-white">+</span>
            </div>
            <p class="text-center font-weight-bold"> Wrestling </p>
            <div class="d-flex justify-content-between">
                <span class="mx-5 btn text-white border rounded" id="decr">-</span>
                <div class="progress m-2 w-100">
                    <div id="grapling-bar" class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50</div>
                </div>
                <span id="incr" class="border rounded mx-5 btn text-white">+</span>
            </div>
            <p class="text-center font-weight-bold"> Health </p>
            <div class="d-flex justify-content-between">
                <span class="mx-5 btn text-white border rounded" id="decr">-</span>
                <div class="progress m-2 w-100">
                    <div id="grapling-bar" class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50</div>
                </div>
                <span id="incr" class="border rounded mx-5 btn text-white">+</span>
            </div>
            <p class="text-center font-weight-bold"> Strenght </p>
            <div class="d-flex justify-content-between">
                <span class="mx-5 btn text-white border rounded" id="decr">-</span>
                <div class="progress m-2 w-100">
                    <div id="grapling-bar" class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50</div>
                </div>
                <span id="incr" class="border rounded mx-5 btn text-white">+</span>
            </div>
            <p class="text-center font-weight-bold"> Stamina </p>
            <div class="d-flex justify-content-between">
                <span class="mx-5 btn text-white border rounded" id="decr">-</span>
                <div class="progress m-2 w-100">
                    <div id="grapling-bar" class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50</div>
                </div>
                <span id="incr" class="border rounded mx-5 btn text-white">+</span>
            </div>
        </div>
    </div>

    <div class="text-center pt-5">
        <button type="submit" class="btn btn-success" asp-area="" asp-controller="Fighters" asp-action="ChooseOrganization">Create</button>
    </div>
</div>