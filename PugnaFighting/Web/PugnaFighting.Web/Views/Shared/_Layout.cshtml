<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pugna</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/favicon/manifest.json">
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/typography.css" />
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/hint.css" />


</head>
<body>
    <header class="bg-dark text-white p-2 text-center font-weight-bold d-flex justify-content-between">
        <div class="p-1">
            <h1><a class="navigation-link" asp-area="" asp-controller="Home" asp-action="Index">Pugna</a></h1>
        </div>

        <nav>
            <ul id="navigation" class="d-flex  pt-1">
                @if (User.Identity.IsAuthenticated == false)
                {
                    <li class="m-2"><a class="navigation-link" href="https://localhost:44319/Identity/Account/Register">Register</a></li>
                    <li class="m-2"><a class="navigation-link" href="https://localhost:44319/Identity/Account/Login">Login</a></li>
                }
                else
                {

                    <li class="m-2"><a class="navigation-link" asp-area="" asp-controller="Users" asp-action="AllFighters">My Fighters</a></li>
                    <li class="m-2"><a class="navigation-link" asp-area="" asp-controller="Managers" asp-action="All">Managers</a></li>
                    <li class="m-2"><a class="navigation-link" asp-area="" asp-controller="Fighters" asp-action="All">Opponents</a></li>
                    <li class="m-2"><a class="navigation-link" asp-area="" asp-controller="Coaches" asp-action="All">Coaches</a></li>
                    <li class="m-2"><a class="navigation-link" asp-area="" asp-controller="Cutmen" asp-action="All">Cutmen</a></li>
                    <li class="m-2"><a class="navigation-link" asp-area="Identity" asp-page="/Account/Manage/Index">Account</a></li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("IndexGuest", "Home", new { area = "" })">
                        <button type="submit" id="logout" class="btn text-white font-weight-bold">Logout</button>
                    </form>
                }
            </ul>
        </nav>
    </header>

    <main role="main" class="p-5">

        <div class="mb-2">
            <button id="hint-btn">Hint</button>
            <div id="hint" class="p-3 rounded">
                <span id="close-btn" class="mb-2">&times;</span>
                <span id="hint-text"></span>
            </div>
        </div>

        <div class="container">
            <partial name="_CookieConsentPartial" />
        </div>
        @this.RenderBody()
    </main>

    <footer class="bg-dark text-white p-3">
        <div class="d-flex justify-content-around font-weight-bold">
            <span>&copy; 2020</span>
            <span>All Rights Reserved.</span>
            <span>v 1.0 <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </div>

        <div class="text-center pt-3">
            <span id="quote" class="font-weight-bold">“My opponent is my teacher. My ego is my enemy.”</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/hint.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}