@model PugnaFighting.Web.ViewModels.Cutmen.AllCutmenViewModel
@{
    ViewData["Title"] = "Cutmen";
}

<div class="p-5 rounded text-white bg-dark mx-auto w-75">
    <h3 class="text-center m-2">Cutmen</h3>
    <div class="d-flex flex-column">
        @foreach (var cutman in Model.CutmanViewModels)
        {
            <div class="d-flex bg-success rounded m-4 p-3 justify-content-between">
                <span>
                    <img src="@cutman.PictureUrl" style="width: 60px; height: 60px;" class="rounded" />
                </span>
                <p>Name: @cutman.FirstName @cutman.LastName</p>
                <p>Age: @cutman.Age</p>
                <p>Born County: @cutman.BornCountry</p>
                <a type="button" class="btn btn-light" asp-controller="Cutmen" asp-action="Details" asp-route-id="@cutman.Id">Details</a>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success d-block mx-auto mt-3 w-25">Create</button>
</div>